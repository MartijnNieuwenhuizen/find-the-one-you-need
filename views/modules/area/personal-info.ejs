<div class="result--personal personal contact">
  <%
    let imgName = `${person.name.first}_${person.name.last}_${person.location}`;
    imgName = imgName.toLowerCase();
  %>

  <div class="personal--img-container" style="background-image: url('./img/people/<%- imgName %>.jpg')">
    <img class="personal--img" src="./img/people/<%- imgName %>.jpg" alt="Een foto van <%- person.name.full %>">
  </div>

  <div class="personal--info">
    <h2 class="personal--name"><%- person.name.full %></h2>
    <p class="personal--role"><%- person.role %></p>
    <%# If person is on location, add the class to make the icon green %>
    <p class="personal--location on-location"><%- person.location %></p>
  </div>

  <%# <ul class="contact--list">
    <li class="contact--item"><a class="contact--link" href="#">T</a></li>
    <li class="contact--item"><a class="contact--link" href="#">M</a></li>
    <li class="contact--item"><a class="contact--link" href="#">Y</a></li>
    <li class="contact--item"><a class="contact--link" href="#">S</a></li>
    <li class="contact--item"><a class="contact--link" href="#">Remove</a></li>
  </ul>%>
</div>

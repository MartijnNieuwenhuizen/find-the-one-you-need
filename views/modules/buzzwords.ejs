<% if (locals.buzzwords && buzzwords[0].word.length) { %>
  <p class="form--buzzwords buzzwords">
  <% buzzwords.forEach(buzzword => { %>
    <% if (buzzword.match === true) { %>
      <button class="match match--<%= buzzword.type %>" type="button">
        <span class="match--word"><%= buzzword.word %></span>
        <svg width="14" height="14" viewBox="0 0 14 14" class="match--remove">
          <g fill="none" fill-rule="evenodd" stroke="#F7F7F7" stroke-linecap="square" stroke-width="2">
            <path d="M1,0.208289554 L1,15.057532" transform="rotate(45 4.976 15.255)"/>
            <path d="M1,0.208289554 L1,15.057532" transform="rotate(-45 3.319 .059)"/>
          </g>
        </svg>
      </button>
    <% } else { %>
      <%= buzzword.word %>
    <% } %>
  <% }) %>
  </p>
<% } %>

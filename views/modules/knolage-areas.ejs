<ul class="knolage-areas">
  <% if (person.knolage.length)  { %>
    <% person.knolage.forEach(area => { %>
      <li class="knolage-areas--item area area-<%- area.className %>">
        <div class="area--title-container match--<%- area.name %>">
          <h3 class="area--title"><%- area.name %></h3>
        </div>

        <% if (area.subArea) { %>
          <div class="category fed">

            <% area.subArea.forEach(subArea => { %>
              <%- include ./area/subArea.ejs %>
            <% }); %>

            <a href="#">Bekijk alle <%- area.name %> Skills van <%- person.name.first %></a>
          <div>
        <% } %>
      </li>
    <% }); %>
  <% } %>

  <% if (person.project.length)  { %>
    <li class="knolage-areas--item area area-project">
      <div class="area--title-container match--project">
        <h3 class="area--title">Projects</h3>
      </div>

      <ul class="projects">
        <% person.project.forEach(project => { %>
          <%- include ./area/project.ejs %>
        <% }) %>
      </ul>

      <a href="#">Bekijk alle projecten waar <%- person.name.first %> aan heeft gewerkt</a>
    </li>

  <% } %>
</ul>

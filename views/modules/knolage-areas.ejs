<ul class="knolage-areas">
  <% if (person.knolage.length)  { %>
    <% person.knolage.forEach(area => { %>
      <li class="knolage-areas--item area area--<%- area.name %>">
        <% if (area.subArea) { %>
          <div class="category">

            <% area.subArea.forEach(subArea => { %>
              <%- include ./area/subArea.ejs %>
            <% }); %>
          </div>
        <% } %>
      </li>
    <% }); %>
  <% } %>

  <% if (person.project.length)  { %>
    <li class="knolage-areas--item category sub-category area area--project">
      <a class="see-more" href="#">
        <p class="see-more--title"><span class="see-more--text">Projecten</span> <span class="see-more--number"><%- person.project.length %></span></p>
      </a>
      <ul class="projects">
        <% person.project.forEach(project => { %>
          <%- include ./area/project.ejs %>
        <% }) %>
      </ul>
    </li>

  <% } %>
</ul>
